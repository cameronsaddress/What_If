# Quantum Life Fork Simulator Environment Variables
# Copy this file to .env and fill in your values

# LLM API Keys (at least one required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Stripe Configuration (for premium features)
STRIPE_API_KEY=your_stripe_api_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# App Configuration
APP_URL=https://quantumlife.app
DEBUG_MODE=false

# Database (optional - defaults to SQLite)
DATABASE_URL=sqlite:///quantum_life_simulations.db

# Session Configuration
SESSION_SECRET_KEY=your_secret_key_here

# Feature Flags
ENABLE_PREMIUM=true
MAX_FREE_BRANCHES=3
MAX_PREMIUM_BRANCHES=4

# Analytics (optional)
ANALYTICS_KEY=your_analytics_key_here